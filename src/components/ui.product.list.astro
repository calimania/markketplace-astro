---
const { products, page } = Astro.props;
import ProductCard from "./ui.product.card.astro";
---
<section class="py-24 bg-white">
  <div class="max-w-8xl mx-auto px-8">
    <header class="text-center mb-20">
      <div class="mb-8">
        <div class="w-px h-16 bg-gray-900 mx-auto mb-8"></div>
      </div>
      <h2 class="text-5xl md:text-6xl font-extralight text-gray-900 mb-8 tracking-tight">
        {page?.Title || 'Featured Collection'}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed font-light">
        {page?.SEO?.metaDescription || 'Defining contemporary artistic excellence'}
      </p>
      <div class="mt-12">
        <div class="w-24 h-px bg-gray-900 mx-auto"></div>
      </div>
    </header>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 mb-16">
      {products.map((product:any) => (
        <ProductCard product={product}  />
      ))}
    </div>
    <div class="text-center">
      <a
        href="/products"
        class="group inline-flex items-center px-12 py-4 border border-gray-900 text-gray-900 font-light tracking-wider uppercase text-sm hover:bg-gray-900 hover:text-white transition-all duration-300"
      >
        View Full Collection
        <div class="w-6 h-px bg-gray-900 ml-4 group-hover:w-8 group-hover:bg-white transition-all duration-300"></div>
      </a>
    </div>
  </div>
</section>
