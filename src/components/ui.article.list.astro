---
const { articles } = Astro.props;
import ArticleCard from './ui.article.card.astro';
---

<section class="py-24 bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-8xl mx-auto px-8">
    <header class="text-center mb-20">
      <div class="mb-8">
        <span class="text-xs font-light tracking-widest text-gray-500 uppercase">Insights</span>
      </div>

      <h2 class="text-5xl md:text-6xl font-extralight text-gray-900 mb-8 tracking-tight">
        Art Journal
      </h2>

      <p class="text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed font-light">
        Explore the stories behind the art, artist interviews, and collecting insights
      </p>

      <div class="mt-12">
        <div class="w-24 h-px bg-gray-900 mx-auto"></div>
      </div>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
      {articles.map(article => (
        <ArticleCard article={article?.data}  />
      ))}
    </div>

    <div class="text-center">
      <a
        href="/blog"
        class="group inline-flex items-center px-12 py-4 bg-gray-900 text-white font-light tracking-wider uppercase text-sm hover:bg-gray-800 transition-all duration-300 transform hover:-translate-y-1 shadow-lg"
      >
        Read More Stories
        <div class="w-6 h-px bg-white ml-4 group-hover:w-8 transition-all duration-300"></div>
      </a>
    </div>
  </div>
</section>
