---
const defaults = {
  bg_cover: 'https://markketplace.nyc3.digitaloceanspaces.com/uploads/f69f2055647b83d6d921f42cf6dda20e.jpg',
}

const { store } = Astro.props;

const split_title = store.title.split(' ');
---

  <section class="relative min-h-screen bg-gradient-to-br from-gray-50 via-white to-gray-100 overflow-hidden">
    <div class={`absolute inset-0 bg-[url('${store?.Cover?.url || defaults.bg_cover}')] bg-cover bg-center opacity-5`}></div>

    <div class="relative max-w-8xl mx-auto px-8 py-24 flex items-center min-h-screen">
      <div class="grid lg:grid-cols-2 gap-16 items-center w-full">
        <div class="space-y-8">
          <div class="space-y-6">
            <div class="w-16 h-px bg-gray-900"></div>
            <h1 class="text-6xl md:text-8xl font-extralight text-gray-900 leading-tight tracking-tight">
              {split_title.map((w:string, i: number)=> {
                if ( i > ((split_title.length / 2) - 1)) {
                  return (
                    <span class="block text-transparent bg-gradient-to-r from-gray-900 via-gray-700 to-gray-900 bg-clip-text">
                      {w}
                    </span>
                  )
                }
                return `${w} `;
              })}
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed max-w-lg font-light">
              Discover extraordinary pieces from emerging and established artists. Each work tells a story, each piece holds meaning.
            </p>
          </div>

          <div class="flex gap-6">
            <a
              href="/products"
              class="group px-8 py-4 bg-gray-900 text-white font-light tracking-wider uppercase text-sm hover:bg-gray-800 transition-all duration-300 transform hover:-translate-y-1 shadow-lg"
            >
              <span class="flex items-center">
                Explore Collection
                <div class="w-6 h-px bg-white ml-4 group-hover:w-8 transition-all duration-300"></div>
              </span>
            </a>
            <a
              href="/blog"
              class="group px-8 py-4 border border-gray-900 text-gray-900 font-light tracking-wider uppercase text-sm hover:bg-gray-900 hover:text-white transition-all duration-300"
            >
              Art Journal
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="relative overflow-hidden shadow-2xl">
            <img
              src="https://images.pexels.com/photos/1183992/pexels-photo-1183992.jpeg"

              alt="Featured Artwork"
              class="w-full h-[600px] object-cover filter grayscale hover:grayscale-0 transition-all duration-1000"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
          </div>

          <!-- Floating Stats -->
          <div class="absolute -bottom-8 -left-8 bg-white/95 backdrop-blur-sm p-8 shadow-xl">
            <div class="text-center">
              <div class="text-3xl font-light text-gray-900 mb-2">500+</div>
              <div class="text-xs font-light tracking-widest text-gray-500 uppercase">Curated Pieces</div>
            </div>
          </div>

          <div class="absolute -top-8 -right-8 bg-white/95 backdrop-blur-sm p-8 shadow-xl">
            <div class="text-center">
              <div class="text-3xl font-light text-gray-900 mb-2">50+</div>
              <div class="text-xs font-light tracking-widest text-gray-500 uppercase">Featured Artists</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
